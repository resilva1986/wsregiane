package decisao;

import javax.swing.JOptionPane;

public class DecisaoSimples {
	public static void main(String[] args) {
	String disciplina = JOptionPane.showInputDialog ("Disciplina").toUpperCase();
	float nota1 = Float.parseFloat(JOptionPane.showInputDialog("nota1"));
	float nota2 = Float.parseFloat(JOptionPane.showInputDialog("nota2"));
	float media = (nota1+nota2)/2;
	
	// && => and    // || => or
	
	if(media>=6) {
		System.out.println("Você foi aprovado na disciplina:" + disciplina);
	}
	
	if(media<4)	{
		System.out.println("Você foi reprovado na disciplina" + disciplina);
	}
	
	if(media<6 && media >=4) {
		System.out.println("Você tem chance no exame");
	}
		
	System.out.println("sua média foi:" + media);	
		
	
		
		
}
		
	
	
	
}
